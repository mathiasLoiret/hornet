{
    "appenders": {
       "dateFile": {
          "type": "dateFile",
          "pattern": ".yyyy-MM-dd",
          "filename":"#{NODE_LOG_DIR}-#{INSTANCE}/#{APPLICATION_CONTEXT_ROOT}/#{APPLICATION_CONTEXT_ROOT}.log",
          "layout": {
             "type": "pattern",
             "pattern": "%d{ISO8601}|%x{tid}|%x{user}|%p|%c|%x{fn}|%m"
          },
          "compress": true,
          "keepFileExt": false
       }
    },
    "categories": {
       "default": { "appenders": ["dateFile"], "level": "INFO" }
    }
 }