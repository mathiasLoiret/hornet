{
  "contextPath": "tYo",
  "welcomePage": "/accueil",
  "localeI18n": {
    "locale": "fr-FR",
    "lang": "fr"
  },
  "server": {
    "route": "js1",
    "port": 8888,
    "portMonitor": 9999,
    "keepAlive": true,
    "keepAliveTimeout": 15000,
    "maxConnections": 100,
    "timeout": 300000,
    "uploadFileSize": 1000000,
    "uploadAntivirus": false,
    "sessionTimeout": 1800000,
    "stackTraceLimit": 100,
    "bodyParserLimit": "50mb",
    "rethrow": false,
    "notifications": {
      "sessionTimeoutDelay": 30000,
      "notifSessionTimeoutRepeat": 5000
    }
    /*
    "https": {
      "cert": "/config/cert/cert.pem",
